<% include ../partials/header.ejs %>

<div class="container">
    <form action="/tacors/<%= taco._id %>/?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Edit <%= taco.name %></label>
            <input type="text" name="taco[name]" class="form-control" value="<%=taco.name%>">
        </div>
        <div class="form-group">
            <label for="name">Edit Image URL</label>
            <input name="taco[img]" type="text" class="form-control" value="<%=taco.img%>">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Edit Description</label>
            <input name="taco[description]" type="text" class="form-control" value="<%=taco.description%>">
            <!-- <textarea name="taco[description]" class="form-control" rows="3" maxlength="250" value="<%=taco.description%>"></textarea> -->
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Edit Your Rating</label>
            <select class="form-control" name="taco[rating]">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<% include ../partials/footer.ejs %>