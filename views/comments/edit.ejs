<% include ../partials/header.ejs %>

<div class="container">
    <h1>Edit Your Comment</h1>
    <form action="/tacors/<%= taco_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Comment</label>
            <input type="text" name="comment[text]" class="form-control" value="<%=comment.text%>">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Select Your Rating</label>
            <select class="form-control" id="exampleFormControlSelect1" name="taco[rating]">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<% include ../partials/footer.ejs %>